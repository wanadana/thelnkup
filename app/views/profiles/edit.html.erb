<%= form_for(@user, url: edit_profile_path) do |f| %>
<div class="row">
  <div class="col-sm-6 col-sm-offset-3">
    <div class="form-group">
      <%= f.label :mobile %>
      <%= f.text_field :mobile, placeholder:"Phone number", class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :location %>
      <%= f.text_field :location, placeholder:"Amsterdam", class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :photo %>
      <%= f.file_field :photo %>
      <%= f.hidden_field :photo_cache %>
    </div>

    <%= f.submit 'Update Profile', class: 'btn btn-default' %>
  </div>
</div>
<% end %>

<%= content_for(:after_js) do %>
  <script src="https://maps.googleapis.com/maps/api/js?libraries=places&amp;key=AIzaSyBnfDo20rVHifNPLNXk3IEOD4Wtm5bO1Ro"></script>
<% end %>
