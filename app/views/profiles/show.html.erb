<div class="container col-md-offset-2">
  <div class="row bg-grey">
    <div class="col-sm-12">
      <h3 class="text-center">My Groups</h3>
      <div class="users-slider center-block">
        <% @usergroups.each do |group| %>
          <div class="center-block">
            <div class="user-group-image">
              <%= cl_image_tag(group.photo, height: 150, width: 150, crop: :fill) %>
            </div>
            <%= group.title %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
<br>
<!-- My membership requests -->

<h4 class="text-center">My Pending Requests</h4>
<div class="container">
  <div class="row">
    <% @memberships.each do |memberships| %>
    <div class="col-sm-6 col-md-4">
      <div class="users">
      <%= cl_image_tag(memberships.group.photo, height: 150, width: 150, crop: :fill) %>
        <div class="caption">
          <%= memberships.group.title %>
        </div>
      </div>
    </div>
    <% end %>
  </div>
</div>



