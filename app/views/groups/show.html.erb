<div class="container">
  <div class="row">
    <!-- User info -->
    <div class="col-md-3">
      <div class="profile">
        <div class="profile-pic">
          <%= cl_image_tag @group.photo, height: 200, width: 300, crop: :fill %>
        </div>
        <div class="profile-info">
          <ul style="list-style-type: none;">
            <li>
              <%= @group.title %>
            </li>
            <li>
              <%= @group.description%>
            </li>
          </ul>
        </div>
      </div>
    </div>
  </div>
</div>
