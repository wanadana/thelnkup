<div class="group-profile">
  <div class="container">
    <div class="row">
      <div class="col-sm-6">
        <div class="profile">
          <div class="row">
            <div class="profile-picture col-sm-6">
              <%= cl_image_tag @group.photo, height: 200, width: 300, crop: :fill %>
            </div>
            <div class="profile-description col-sm-6">
              <h3><%= @group.title %></h3>
              <p><%= @group.description%></p>
              <p>Location: <%= @group.location%></p>
              <p>Category: <%= @group.category.name %></p>
              <p>Created: <%= @group.created_at.strftime("%b %d, %Y") %></p>
            </div>
            <div class="join-btn col-sm-6 col-sm-offset-6">
              <%= link_to "Become a Member", "#", class:"btn-join", data: {toggle: "modal", target: "#myModal" } %>

            </div>
          </div>
          <div class="row">
          <div class="profile-info col-sm-6">
              <% if @admin %>
              <h3 class="text-left">Group Applicants:</h3>
            </div>
            <div class="row">
              <% @pending_memberships.each do |m| %>
              <div class="col-sm-12 col-md-6">
                <div class="new-card">
                  <%= image_tag('http://placehold.it/350x350') %>
                  <div class="card-name"><%= m.user.first_name %></div>
                  <div class="card-answer">Answer 1:</div>
                  <div card="card-answer-content"><%= m.answer %></div>
                  <div class="actions">
                    <%= link_to 'Approve', group_membership_approve_path(@group.id, m.id), method: :post, class: "btn btn-success" %>
                    <%= link_to 'Reject', group_membership_reject_path(@group.id, m.id), method: :post, class: "btn btn-danger" %>
                  </div>
                </div>
              </div>
              <% end %>
            </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
  <!-- in-group comments -->
  <div class="container">
    <div class="row">
      <div class="col-sm-6">
        <h3 id='comment_count'>
          <%= pluralize @group.comments.size, "comment" %>
        </h3>
        <div class="row">
          <div id="new_comment col-sm-6">
            <%= render 'comments/form_comment' %>
          </div>
          <div id="comments">
            <% if @group.comments.blank? %>
            <div id="no_comment">
              Be the first to leave a comment for <%= @group.title %>
            </div>
            <% else %>
            <% @group.comments.each do |comment| %>
            <%= render 'comments/show_comment', comment: comment %>
            <% end %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Modal -->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="myModalLabel">Become a Member</h4>
      </div>
      <div class="modal-body">
        <h4>Complete the form below to register</h4>
        <br>
        <%= @group.question %>
        <br>
        <%= form_for([@group, @membership], url: group_memberships_path(group_id: @group.id)) do |f| %>
          <div class="row">
            <div class="col-sm-12">
              <div class="form-group">
                <%= f.label :answer %>
                <%= f.text_field :answer, placeholder:"Your response...", class: "form-control" %>
              </div>
              <%= f.button "Submit", class: "btn btn-block btn-login" %>
            </div>
          </div>
        <% end %>
      </div>
      <!-- <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary">Save changes</button>
      </div> -->
    </div>
  </div>
</div>

