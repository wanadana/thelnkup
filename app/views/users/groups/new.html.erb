<div class="row">
  <div class="col-sm-6 col-sm-offset-3">
    <h1>Create your group</h1>
  </div>
</div>
<%= flash[:notice] %>


<%= form_for(@group, url: users_groups_path ) do |f| %>
  <div class="row">
    <div class="col-sm-6 col-sm-offset-3">
      <div class="form-group">
        <%= f.label :Title %>
        <%= f.text_field :title, placeholder:"Cake", class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :description %>
        <%= f.text_field :description, placeholder:"Love a kick about, mostly on sundays...", class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :location %>
        <%= f.text_field :location, placeholder:"Amsterdam", class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :capacity %>
        <%= f.text_field :capacity, placeholder:"23", class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :link %>
        <%= f.text_field :link, placeholder:"...Whatsapp link...", class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :category_id %>
        <%= f.select :category_id, @categories_with_id, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :photo %>
        <%= f.file_field :photo %>
        <%= f.hidden_field :photo_cache %>
      </div>

      <div class="form-group">
        <%= f.label :question %>
        <%= f.text_field :question, placeholder:"Do you toe poke?", class: "form-control" %>
      </div>

      <%= f.submit 'Create Group', class: 'btn btn-default' %>
    </div>
  </div>
<% end %>
