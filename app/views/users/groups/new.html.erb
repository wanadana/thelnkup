<div class="row">
  <div class="col-sm-6 col-sm-offset-3">
    <h1>Add a new Board</h1>
  </div>
</div>


<%= form_for(@group) do |f| %>
  <div class="row">
    <div class="col-sm-6 col-sm-offset-3">
      <div class="form-group">
        <%= f.label :Title %>
        <%= f.text_field :Title, placeholder:"Cake", class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :description %>
        <%= f.text_field :description, placeholder:"Love a kick about, mostly on sundays...", class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :City %>
        <%= f.text_field :location, placeholder:"Amsterdam", class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :Capacity %>
        <%= f.text_field :capacity, placeholder:"23", class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :link %>
        <%= f.text_field :link, placeholder:"...Whatsapp link...", class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :category %>
        <%= f.select :category, @categories, {}, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :photo %>
        <%= f.file_field :photo %>
        <%= f.hidden_field :photo_cache %>
      </div>

      <div class="form-group">
        <%= f.label :Question %>
        <%= f.text_field :quesiton, placeholder:"Do you toe poke?", class: "form-control" %>
      </div>

      <%= f.submit 'Create Board', class: 'btn btn-default' %>
    </div>
  </div>
<% end %>
