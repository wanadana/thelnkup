<div class="row">
  <div class="col-sm-6 col-sm-offset-3">
    <h1>Create your group</h1>
  </div>
</div>
<%= flash[:notice] %>


<%= form_for(@group, url: users_groups_path ) do |f| %>
  <div class="row">
    <div class="col-sm-6 col-sm-offset-3">
      <div class="form-group">
        <%= f.label :Title %>
        <%= f.text_field :title, placeholder:"Horse Lovers", class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :description %>
        <%= f.text_field :description, placeholder:"I mean, what's not to love about riding a horse...", class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :location %>
        <%= f.text_field :location, placeholder:"Amsterdam", class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :capacity %>
        <%= f.text_field :capacity, placeholder:"A Whatsapp Group can have 256 members max.", class: "form-control" %>
      </div>
      <div class="form-group">
      <div id="group_link_validation" class="hide live_validation" style="color: red; height: 30px; width: 100%;"></div>
      <div class="input-group">
        <span class="input-group-addon" id="basic-addon1">https://chat.whatsapp.com/</span>
        <%= f.text_field :link, placeholder:"Add your Whatsapp Group Link", class: "form-control" %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :category_id %>
        <%= f.select :category_id, @categories_with_id, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :photo %>
        <%= f.file_field :photo %>
        <%= f.hidden_field :photo_cache %>
      </div>

      <div class="form-group">
        <div class="input-group">
        <%= f.text_field :question, placeholder:"Do you also like horses", class: "form-control" %>
        <span class="input-group-addon" id="basic-addon1">?</span>
        </div>
      </div>

      <%= f.submit 'Create group', class: 'btn btn-default' %>
    </div>
  </div>
<% end %>
