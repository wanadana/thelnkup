<div class="modal fade" id="requireinfosModal" tabindex="-1" role="dialog" aria-labelledby="requireinfosModalLabel">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="requireinfosModalLabel">Sign up (step 2)</h4>
      </div>
      <div class="modal-body">
       <%= form_for(@user, url: require_infos_path, method: :post) do |f| %>
       <div class="row">
        <div class="col-sm-6 col-sm-offset-3">
          <div class="form-group">
            <%= f.label :mobile %>
            <%= f.text_field :mobile, placeholder:"0612345678", class: "form-control" %>
          </div>
          <div class="form-group">
            <%= f.label :location %>
            <%= f.text_field :location, placeholder:"Amsterdam", class: "form-control" %>
          </div>
          <div class="form-group">
            <%= f.label :photo %>
            <%= f.file_field :photo %>
            <%= f.hidden_field :photo_cache %>
          </div>
          <%= f.submit 'Submit', class: "btn btn-block btn-signup" %>
        </div>
      </div>
      <% end %>
      <%= content_for(:after_js) do %>
      <script src="https://maps.googleapis.com/maps/api/js?libraries=places&amp;key=AIzaSyBnfDo20rVHifNPLNXk3IEOD4Wtm5bO1Ro"></script>
      <% end %>
    </div>
  </div>
</div>
</div>
</div>


