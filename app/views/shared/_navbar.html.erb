<div class="navbar-wagon">
  <%= link_to root_path, class: "navbar-wagon-brand" do %>
  <%= image_tag "thelnkup_logo.png" %>
  <% end %>

  <div class="navbar-wagon-right hidden-xs hidden-sm">

    <form action="/groups",  class="navbar-wagon-search">
      <input name="search" type="text" class="navbar-wagon-search-input" placeholder="Search something">
      <button type="submit" class="navbar-wagon-search-btn">
        <i class="fa fa-search"></i>
      </button>
    </form>

    <% if user_signed_in? %>

    <%= current_user.email %>

    <div class="navbar-wagon-item">
      <div class="dropdown">
        <% if current_user.facebook_picture_url %>
        <%= image_tag current_user.facebook_picture_url, class: "avatar dropdown-toggle", id: "navbar-wagon-menu", "data-toggle" => "dropdown" %>
        <% else %>
        <%= image_tag(current_user.photo, class: "avatar-navbar", id: "navbar-wagon-menu", data: { toggle: "dropdown"}) %>
        <% end %>
        <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
          <li>

          <%= link_to profile_path do %>
          <i class="fa fa-user"></i> <%= t(".profile", default: "My Profile") %>
          <% end %>
        </li>
        <li>
          <%= link_to destroy_user_session_path, method: :delete do %>
          <i class="fa fa-sign-out"></i>  <%= t(".sign_out", default: "Log out") %>
          <% end %>
        </li>
      </ul>
    </div>

      <% else %>

      <a type="button" class="navbar-wagon-link" data-toggle="modal" data-target="#loginModal">
        Log in
      </a>
      <br>
      <a type="button" class="navbar-wagon-link" data-toggle="modal" data-target="#signupModal">
        Sign up
      </a>

      <% end %>

      <% if user_signed_in? %>

      <%= link_to t(".top_call_to_action", default: "Lnkup Your Group"), new_users_group_path, class: "navbar-wagon-item navbar-wagon-button btn" %>

      <% else %>

      <%= link_to t(".top_call_to_action", default: "Lnkup Your Group"), new_user_session_path, class: "navbar-wagon-item navbar-wagon-button btn" %>

      <% end %>
    </div>

    <div class="navbar-wagon-item hidden-md hidden-lg">
      <div class="dropdown">
        <i class="fa fa-bars dropdown-toggle" data-toggle="dropdown"></i>
        <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
          <li><a href="#">Some mobile link</a></li>
          <li><a href="#">Other one</a></li>
          <li><a href="#">Other one</a></li>
        </ul>
      </div>
    </div>
  </div>
</div>
