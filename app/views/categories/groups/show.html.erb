<!-- group info -->
<div class="container">
  <div class="row">
    <!-- User info -->
    <div class="col-md-6">
      <div class="profile">
        <div class="profile-pic">
          <%= cl_image_tag @group.photo, height: 200, width: 300, crop: :fill %>
        </div>
        <div class="profile-info">
          <ul style="list-style-type: none;">
            <li>
              <%= @group.title %>
            </li>
            <li>
              <%= @group.description%>
            </li>
            <li>
              Location: <%= @group.location%>
            </li>
            <li>
              Category: <%= @group.category.name %>
            </li>
            <li>
              Founded <%= @group.created_at.strftime("%b %d, %Y") %>
            </li>
            <%= link_to 'Back', category_groups_path(@category), class: "btn btn-default" %>
          </ul>
        </div>
      </div>
    </div>
  </div>
</div>
<!-- in-group comments -->
<div class="row">
  <div class="col-sm-6 col-sm-offset-3">
    <h2 id='comment_count'>
      <%= pluralize @group.comments.size, "comment" %>
    </h2>


<%= link_to "Home", root_path %>
<br>
<%= link_to "Become a Member", new_group_membership_path(@group) %>

<h2 id='comment_count'>
  <%= pluralize @group.comments.size, "comment" %>
</h2>

<div id="new_comment">
  <%= render 'comments/form_comment' %>
</div>


    <div id="comments">
      <% if @group.comments.blank? %>
      <div id="no_comment">
        Be the first to leave a comment for <%= @group.title %>
      </div>
      <% else %>
      <% @group.comments.each do |comment| %>
      <%= render 'comments/show_comment', comment: comment %>
      <% end %>
      <% end %>
    </div>
  </div>
</div>
