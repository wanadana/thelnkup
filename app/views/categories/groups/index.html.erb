<h1><%= @category.name %></h1>
<div class="container">
  <div class="row">
    <% @category.groups.each do |group| %>
    <div class="col-sm-6 col-md-4">
      <div class="card">
        <%= cl_image_tag(group.photo, height: 350, width: 350, crop: :fill) %>
        <div class="caption">
          <h3><%= group.title %></h3>
          <%= group.description %>
          <br>
          <%= link_to "Explore", group_path(group) %>
          <br>
          <%= link_to "Delete group", users_group_path(group), method: :delete, data: { confirm: 'Are you sure you want to delete this awesome board?' } %>
        </div>
      </div>
    </div>
    <% end %>
  </div>
</div>
<%= link_to 'Back', categories_path, class: "btn btn-default" %>
